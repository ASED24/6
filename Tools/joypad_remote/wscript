#!/usr/bin/env python
# encoding: utf-8

def build(bld):
    vehicle = bld.path.name
    bld.ap_stlib(
        name=vehicle + '_libs',
        ap_vehicle='UNKNOWN',
        ap_libraries=bld.ap_common_vehicle_libraries() + [
            'AP_Joypad',
            'AP_Beacon',
            'AP_Camera',
            'AP_AdvancedFailsafe',
        ],
    )

    bld.ap_program(
        program_name=vehicle,
        program_groups=['bin', 'examples'],
        use=vehicle + '_libs',
    )
