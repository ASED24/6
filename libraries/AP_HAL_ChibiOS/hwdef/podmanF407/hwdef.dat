# for PodMan hardware

# MCU class and specific type
MCU STM32F4xx STM32F407xx

# board ID for firmware load
APJ_BOARD_ID 877

# crystal frequency
OSCILLATOR_HZ 8000000

define STM32_ST_USE_TIMER 5

FLASH_SIZE_KB 1024


# three I2C bus: I2C1 external, I2C2 external, I2C3 external
I2C_ORDER I2C2

# order of UARTs (and USB)
SERIAL_ORDER OTG1 USART1 USART2 USART3 UART4 UART5

#USB_STRING_MANUFACTURER "PodmanPilot"
#RCinput is PC8
PC7 TIM3_CH2 TIM3 RCININT PULLDOWN LOW

# analog pins
PC0 BATT_VOLTAGE_SENS ADC1 SCALE(1)
PC1 BATT_CURRENT_SENS ADC1 SCALE(1)

# define default battery setup
define HAL_BATT_VOLT_PIN 10
define HAL_BATT_CURR_PIN 11
define HAL_BATT_VOLT_SCALE 10.0
define HAL_BATT_CURR_SCALE 10.0

# LEDs
PE0 LED_BLUE OUTPUT LOW GPIO(0)
PE1 LED_YELLOW OUTPUT LOW GPIO(1)
PE2 LED_RED OUTPUT LOW GPIO(2)
#PB2 BOOT1 INPUT

# USART1
PA9 USART1_TX USART1 NODMA
PA10 USART1_RX USART1 NODMA

# USART2
PD5 USART2_TX USART2 NODMA
PD6 USART2_RX USART2 NODMA

# USART3
PD8 USART3_TX USART3 NODMA
PD9 USART3_RX USART3 NODMA

# UART4
PC10 UART4_TX UART4 NODMA
PC11 UART4_RX UART4 NODMA

# UART5
PC12 UART5_TX UART5 NODMA
PD2 UART5_RX UART5 NODMA

# COMPASSES2
PB10 I2C2_SCL I2C2
PB11 I2C2_SDA I2C2

# spi bus for dataflash
PB13 SPI2_SCK SPI2
PB14  SPI2_MISO SPI2
PB15  SPI2_MOSI SPI2

# This is the invensense data-ready pin. We don't use it in the
# default driver.
#PC4 MPU_DRDY INPUT
#IRQ for MPU6000
#PC4 EXTI_MPUX000 INPUT?????

# Debug Ports
PA11 OTG_FS_DM OTG1
PA12 OTG_FS_DP OTG1
PA13 JTMS-SWDIO SWD
PA14 JTCK-SWCLK SWD

# SPI chip selects
PE8 MPU_CS CS
PC5 BARO_CS CS

# PWM out pins
PA0  TIM2_CH1 TIM2 PWM(1) GPIO(50) NODMA
PA1  TIM2_CH2 TIM2 PWM(2) GPIO(51) NODMA
PA2  TIM2_CH3 TIM2 PWM(3) GPIO(52) NODMA
PA3  TIM2_CH4 TIM2 PWM(4) GPIO(53) NODMA
#PA15 TIM2_CH1 TIM2 PWM(5) GPIO(54)
#PB3  TIM2_CH2 TIM2 PWM(6) GPIO(55)
#PB8  TIM4_CH3 TIM4 PWM(7) GPIO(56)
#PB9  TIM4_CH4 TIM4 PWM(8) GPIO(57)

define HAL_STORAGE_SIZE 15360
STORAGE_FLASH_PAGE 2

#reserve 32k for bootloader and 32k for flash storage
FLASH_RESERVE_START_KB 64

#one IMU
IMU Invensense SPI:icm20602 ROTATION_NONE

#one baro
#BARO MS56XX SPI:ms5611
BARO SPL06 SPI:spl06

# also allow for probing of external barometers
#define HAL_PROBE_EXTERNAL_I2C_BAROS

# also allow for probing of external compasses
#define HAL_PROBE_EXTERNAL_I2C_COMPASSES

# SPI devices
SPIDEV icm20602       SPI2 DEVID3  MPU_CS  MODE3  400*KHZ  400*MHZ
SPIDEV spl06          SPI2 DEVID1  BARO_CS MODE3  400*KHZ  400*KHZ
#SPIDEV ms5611        SPI2 DEVID3  BARO_CS MODE3 20*MHZ 20*MHZ
#SPIDEV sdcard        SPI2 DEVID1  SDCARD_CS MODE0 400*KHZ 25*MHZ

# enable logging to dataflash
#define HAL_LOGGING_DATAFLASH_ENABLED 1
#undef HAL_LOGGING_DATAFLASH_ENABLED

define HAL_WITH_DSP FALSE

# filesystem setup on sdcard
#define HAL_OS_FATFS_IO 1
#define HAL_BOARD_LOG_DIRECTORY "/APM/LOGS"
#define HAL_BOARD_TERRAIN_DIRECTORY "/APM/TERRAIN"

# disable SMBUS and fuel battery monitors to save flash
#define AP_BATTMON_SMBUS_ENABLE 0
#define AP_BATTMON_FUEL_ENABLE 0

# disable parachute and sprayer to save flash
#define HAL_PARACHUTE_ENABLED 0
#define HAL_SPRAYER_ENABLED 0

# reduce max size of embedded params for apj_tool.py
#define AP_PARAM_MAX_EMBEDDED_PARAM 1024
#define HAL_WITH_DSP FALSE

# save some flash
#define HAL_GENERATOR_ENABLED 0
#define AC_OAPATHPLANNER_ENABLED 0
#define PRECISION_LANDING 0
#define HAL_BARO_WIND_COMP_ENABLED 0
#define GRIPPER_ENABLED 0
#define AP_OPTICALFLOW_ENABLED 0
