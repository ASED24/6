# hw definition file for processing by chibios_pins.py

# MCU class and specific type
MCU STM32L496 STM32L496xx

# bootloader starts firmware at 36k + 4k (STORAGE_FLASH)
FLASH_RESERVE_START_KB 40

# store parameters in pages 18 and 19
STORAGE_FLASH_PAGE 18
define HAL_STORAGE_SIZE 800

# board ID for firmware load
APJ_BOARD_ID 1066

# setup build for a peripheral firmware
env AP_PERIPH 1

# enable watchdog

# crystal frequency
OSCILLATOR_HZ 0

# assume the 256k flash part
FLASH_SIZE_KB 256

# order of UARTs
SERIAL_ORDER USART1 USART2 USART3 UART4

#STDOUT_SERIAL SD1
#STDOUT_BAUDRATE 57600

# LPUART    # DELETE LATER - to be implemented
# PC1 LPUART1_TX LPUART1 SPEED_HIGH NODMA
# PC0 LPUART1_RX LPUART1 SPEED_HIGH NODMA

# USART2
PA2 USART2_TX USART2 SPEED_HIGH NODMA
PA3 USART2_RX USART2 SPEED_HIGH NODMA

# USART3
PC4 USART3_TX USART3 SPEED_HIGH NODMA
PC5 USART3_RX USART3 SPEED_HIGH NODMA

# UART4
PA0 UART4_TX UART4 SPEED_HIGH NODMA
PA1 UART4_RX UART4 SPEED_HIGH NODMA

# USART1
PB6 USART1_TX USART1 SPEED_HIGH NODMA
PB7 USART1_RX USART1 SPEED_HIGH NODMA

# LED, active low
PA15 LED OUTPUT HIGH GPIO(1)

# PWM outputs
PA7 TIM3_CH2 TIM3 PWM(1) GPIO(50)
PA8 TIM1_CH1 TIM1 PWM(2) GPIO(51)

# SD Card enable
PC13 SDCARD_SEL OUTPUT HIGH GPIO(2)

# Enable/Disable Radio
PB2 RADIO_EN OUTPUT LOW GPIO(3)

# Enable/Disable Payload Power
PB11 PSU_EN OUTPUT LOW GPIO(4)

# Reset HLK
PB4 HLK_RST OUTPUT HIGH GPIO(5)

# Digital I/O
PC2 OP1_OUT OUTPUT HIGH GPIO(6)
PC3 OP2_OUT OUTPUT HIGH GPIO(7)
PC6 IP1_IN INPUT LOW GPIO(8)
PC7 IP2_IN INPUT LOW GPIO(9)

# SPI2
PB10 SPI2_SCK SPI2
PB14 SPI2_MISO SPI2
PB15 SPI2_MOSI SPI2

# CS pins
PC8 BMI088_A_CS CS
PC9 BMI088_G_CS CS

SPIDEV bmi088_g SPI2 DEVID1  BMI088_G_CS  MODE3 10*MHZ 10*MHZ
SPIDEV bmi088_a SPI2 DEVID2  BMI088_A_CS  MODE3 10*MHZ 10*MHZ

# I2C bus
# PC1 I2C3_SDA I2C3
# PC0 I2C3_SCL I2C3

I2C_ORDER I2C3

# microSD support       # to be implemented
# PC8 SDMMC2_D0 SDMMC2
# PC9 SDMMC2_D1 SDMMC2
# PC10 SDMMC2_D2 SDMMC2
# PC11 SDMMC2_D3 SDMMC2
# PC12 SDMMC2_CK SDMMC2
# PD2 SDMMC2_CMD SDMMC2

# debugger support
PA13 JTMS-SWDIO SWD
PA14 JTCK-SWCLK SWD

# MAIN_STACK is stack for ISR handlers
MAIN_STACK 0x300

# PROCESS_STACK controls stack for main thread
PROCESS_STACK 0xA00

# enable CAN support
PB8 CAN1_RX CAN1
PB9 CAN1_TX CAN1

PB12 CAN2_RX CAN2
PB13 CAN2_TX CAN2

# CAN_ORDER 1 2

# ADC inputs
PA5 VSENSE1 ADC1 SCALE(1)
PA6 VSENSE2 ADC1 SCALE(1)
PB0 VSENSE3 ADC1 SCALE(1)
PB1 VSENSE4 ADC1 SCALE(1)

define HAL_PERIPH_LISTEN_FOR_SERIAL_UART_REBOOT_CMD_PORT 0

define HAL_CAN_POOL_SIZE 6000

define HAL_NO_GPIO_IRQ

define HAL_DISABLE_LOOP_DELAY

define HAL_USE_ADC TRUE

define HAL_SUPPORT_RCOUT_SERIAL 1

define HAL_CAN_DRIVER_DEFAULT 1

define HAL_PERIPH_ENABLE_RC_OUT

define HAL_NO_GCS

define HAL_NO_MONITOR_THREAD

define SERIAL_BUFFERS_SIZE 512

define DMA_RESERVE_SIZE 2048

# stack for fast interrupts
define PORT_INT_REQUIRED_STACK 64

define STM32_ADC_USE_ADC1 TRUE

define AP_PARAM_MAX_EMBEDDED_PARAM 512

define CAN_APP_NODE_NAME "org.ardupilot.CarbonixPLBL496"
